			    , A.DIV_CD
			    , A.DIV_NM
			    , A.WAITST_CD
			    , A.WAITST_NM
			    , TO_CHAR(A.WAIT_DT, 'YYYY-MM-DD') AS WAIT_DT
			    , D.FILM_CD
			FROM    
			    V_WAIT_HIST A   
			INNER JOIN  waitView B 
			ON(A.RCP_NO = B.RCP_NO AND A.WAIT_NUM = B.WAIT_NUM)
			INNER JOIN TRM_CHART C ON(B.RCP_NO = C.RCP_NO)
			LEFT OUTER JOIN FILM_ORDER D ON(C.TRM_CD = D.TRM_CD)
			WHERE 
			    A.WAITST_CD = 'WS005'
			    AND D.FILM_CD = 'MRI'
