/* ***************************************grid-stack 스타일  시작*************************************** */
.grid-stack {
	background: #FFFFFF;
	border-radius: 10px;
}

.grid-stack-item-content {
	background-color: #FCFFFE;
	border-radius: 10px;
	border-top: 10px solid #4E73DF;
	box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
	padding: 20px;
}
/* ***************************************grid-stack 스타일 끝  *************************************** */